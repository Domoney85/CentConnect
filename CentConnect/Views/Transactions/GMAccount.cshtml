@model IEnumerable<CentConnect.Models.SummaryAcc>

@{
    ViewBag.Title = "Account";
}

<h2>Details</h2>


    @Html.AntiForgeryToken()


    <table class="MessageBoard" id="DisplayBoard">
        <tr>
            <th>CharName</th><th>Balance</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CharName)
                </td>

                <td>
                     @Html.DisplayFor(modelItem => item.Total)
                </td>

                <td>
                    @{Html.RenderAction("DisplayName", "Campaigns", new { id = item.CampID });}
                </td>
            </tr>
        }

    </table>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }