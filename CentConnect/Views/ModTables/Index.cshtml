@model IEnumerable<CentConnect.Models.ModTable>




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @if (User.IsInRole("Admin"))
    {
        <h4 style="text-align:center;"> @Html.ActionLink("Admin: Add Message", "AddMessage", null, new { @class = "ButtonClass" })</h4>
    }
    @{int x = 0; }
    @foreach (var item in Model)
    {
        if (x < 5)
        {
            <table class="MessageBoard">
                <tr>
                    <th>
                        <h4>
                            @{Html.RenderAction("DisplayName", "Campaigns", new { id = item.CampID });}

                        </h4>
                    </th>
                    <th style="width:80%;">
                        <h4>
                            @Html.DisplayFor(modelItem => item.Heading)

                        </h4>
                    </th>
                    <th>
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ModId })
                                -
                                @Html.ActionLink("Delete", "Delete", new { id = item.ModId })
                            </div>
                        }
                    </th>
                </tr>
                <tr>
                    <td colspan="3" style="width:100%;">
                        <p>
                            @Html.DisplayFor(modelItem => item.Content)
                        </p>
                    </td>
                </tr>
                <tr>
                    <td style="width:70%;" colspan="2"></td>
                    <td class="signature">
                        <p>
                            - @Html.DisplayFor(modelItem => item.Sig)
                        </p>
                    </td>
                </tr>
                <tr>
                    <th colspan="3" class="PostedTime">
                        @Html.DisplayFor(modelItem => item.PostedTime)
                    </th>




                </tr>
            </table>
            x++;
        }
    }



</body>
</html>
